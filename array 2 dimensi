#include <iostream>

using namespace std;

int main()
{
    int d[4][4],e[4][4],f[4][4],ordo;
    cout<<"Input matriks : ";
    cin>>ordo;
    cout<<"Matriks A : "<< endl;
    for(int i=1;i<=ordo;i++){
       for(int j=1;j<=ordo;j++)
	   {
         cout<<"Elemen "<<i<<","<<j<<" : ";
         cin>>d[i][j];
       }
    }
	cout << endl;
    cout <<"Matriks B : "<< endl;
    for(int i=1;i<=ordo;i++)
	{
       for(int j=1;j<=ordo;j++)
	   {
         cout<<"Elemen "<<i<<","<<j<<" : ";
         cin>>e[i][j];
       }
     }

    for(int i=1;i<=ordo;i++)
       for(int j=1;j<=ordo;j++)
          f[i][j]=d[i][j]+e[i][j];

	cout << endl;
    cout<<"Hasil penjumlahan : "<< endl;
    for(int i=1;i<=ordo;i++)
	{
       for(int j=1;j<=ordo;j++)
          cout<<f[i][j]<<" ";
      cout<<endl;
    }
	cout << endl;
	cout <<"Thankyou"<<endl<< endl;
   return 0;
}
